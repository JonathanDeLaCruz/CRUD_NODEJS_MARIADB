<!DOCTYPE html>
<html>
<head>
  <title>Tareas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h1>Actividades</h1>
  <a href="/actividades/crear" class="btn btn-primary mb-3">Nueva Actividad</a>
  <table class="table">
    <thead>
      <tr>
        <th>Título</th>
        <th>Descripción</th>
        <th>Realizó</th>
        <th>Evidencia</th>
        <th>Tarea</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% actividades.forEach(a => { %>
        <tr>
          <td><%= a.act_titulo %></td>
          <td><%= a.act_descripcion %></td>
          <td><%= new Date(a.act_realizo).toLocaleDateString() %></td>
          <td>
            <% if (a.act_evidencia) { %>
              <img src="/uploads/<%= a.act_evidencia %>" width="100">
            <% } else { %> N/A <% } %>
          </td>
          <td><%= a.tarea?.tar_titulo %></td>
          <td>
            <a href="/actividades/editar/<%= a.act_id %>" class="btn btn-warning btn-sm">Editar</a>
            <a href="/actividades/eliminar/<%= a.act_id %>" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar esta actividad?')">Eliminar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>